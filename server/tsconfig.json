{
  "compilerOptions": {
    "module": "nodeNext",
    "moduleResolution": "nodenext",
    "isolatedModules": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "baseUrl": ".",
    "skipLibCheck": true,
    "paths": {
      "@src/*": ["src/*", "dist/*"],
      "@interfaces/*": ["../interfaces/*"]
    }
  },
  "include": ["src"]
}
